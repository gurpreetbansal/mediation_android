<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_privacy_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/back_button"
            android:tint="@color/gray_eight" />

        <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
            android:id="@+id/privacy_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="@string/privacy"
            android:textColor="@color/gray_eight"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="@dimen/_15sdp"/>
    </LinearLayout>
    <ScrollView

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp">

           <!-- <com.t.meditationapp.Custom_Widgets.CustomRegularTextView
                android:id="@+id/txt_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text="@string/lorm"
                android:textColor="@color/gray_eight"
                android:textSize="@dimen/_12sdp"  />-->
            <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                android:id="@+id/privacy_description_Txt_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>