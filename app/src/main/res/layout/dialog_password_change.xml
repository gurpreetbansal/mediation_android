<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_20sdp">

    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
        android:id="@+id/dialog_password_change_oldpassword_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Old Password"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <com.t.meditationapp.Custom_Widgets.CustomRegularEditText
        android:id="@+id/dialog_password_change_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:color/transparent"
        android:hint="Old Password" />

    <com.t.meditationapp.Custom_Widgets.CustomRegularEditText
        android:id="@+id/dialog_password_change_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:color/transparent"
        android:hint="New Password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_password_change_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:text="Change Password" />

</LinearLayout>