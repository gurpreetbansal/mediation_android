<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_account_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/back_button"
            android:tint="@color/gray_eight" />

        <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="@string/account_settings"
            android:textColor="@color/gray_eight"
            android:textSize="@dimen/_19sdp">

        </com.t.meditationapp.Custom_Widgets.CustomBoldtextView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="@dimen/_15sdp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/account_two_frag__prog_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <ScrollView

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/first_name"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_12sdp" />

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center|left"
                        android:text="@string/joeden"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__first_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/edit"
                        android:textColor="#f89c90"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <!--            <com.t.myapplication.Custom_Widgets.CustomBoldtextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:gravity="center|left"-->
                <!--                android:text="@string/notifications"-->
                <!--                android:textColor="#333333"-->
                <!--                android:textSize="@dimen/_17sdp" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/last_name"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_12sdp" />

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center|left"
                        android:text="@string/schafer"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__last_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/edit"
                        android:textColor="#f89c90"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <!--            <com.t.myapplication.Custom_Widgets.CustomBoldtextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:gravity="center|left"-->
                <!--                android:text="@string/notifications"-->
                <!--                android:textColor="#333333"-->
                <!--                android:textSize="@dimen/_17sdp" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/email_address"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_12sdp" />

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center|left"
                        android:text="@string/email_value"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:visibility="gone">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_fragment__email_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/edit"
                        android:textColor="#f89c90"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <!--            <com.t.myapplication.Custom_Widgets.CustomBoldtextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:gravity="center|left"-->
                <!--                android:text="@string/notifications"-->
                <!--                android:textColor="#333333"-->
                <!--                android:textSize="@dimen/_17sdp" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/password"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_12sdp" />

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center|left"
                        android:text="@string/connected"
                        android:textColor="@color/gray_eight"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                        android:id="@+id/account_two_frag__password_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/change"
                        android:textColor="#f89c90"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <!--            <com.t.myapplication.Custom_Widgets.CustomBoldtextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:gravity="center|left"-->
                <!--                android:text="@string/notifications"-->
                <!--                android:textColor="#333333"-->
                <!--                android:textSize="@dimen/_17sdp" />-->

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/account_two_frag__done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Done" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>