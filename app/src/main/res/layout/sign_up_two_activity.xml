<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:src="@mipmap/logo"
        android:layout_marginTop="@dimen/_20sdp"/>
    <com.t.meditationapp.Custom_Widgets.CustomRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"/>

    <ScrollView

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@mipmap/login_sign_up_bg"
        android:layout_marginTop="@dimen/_30sdp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@mipmap/first_name"
            android:padding="@dimen/_10sdp"/>
        <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="@string/first_name"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/gray_cthree_"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@mipmap/login_sign_up_bg">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@mipmap/email"
            android:padding="@dimen/_13sdp"/>
        <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="@string/email"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/gray_cthree_"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@mipmap/login_sign_up_bg"
        android:layout_marginTop="@dimen/_6sdp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@mipmap/lock_login"
            android:padding="@dimen/_10sdp"/>
        <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="@string/password"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/gray_cthree_"/>
    </LinearLayout>
    <com.t.meditationapp.Custom_Widgets.CustomRegularTextView
        android:id="@+id/txt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/sign_up_email_bg"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"/>
    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/have_an"
        android:textColor="@color/gray_cthree_"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
        android:id="@+id/txt_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/or"
        android:textColor="@color/gray_three"
        android:textSize="@dimen/_15sdp" />
    <LinearLayout
        android:id="@+id/ll_facebook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/txt_get_full"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@mipmap/signup_fb_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp">

        <com.t.meditationapp.Custom_Widgets.CustomRegularTextView
            android:id="@+id/txt_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/signup_facebook"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_google"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/txt_get_full"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@mipmap/sign_up_google_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp">

        <com.t.meditationapp.Custom_Widgets.CustomRegularTextView
            android:id="@+id/txt_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/signup_google"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>