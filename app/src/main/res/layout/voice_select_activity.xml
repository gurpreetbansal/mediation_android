<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VoiceSelect_Activity">

    <include layout="@layout/tool_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="-5dp"
        android:src="@mipmap/bar" />

    <ScrollView

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:orientation="vertical">

            <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/voice"
                android:textColor="@color/gray_nine"
                android:textSize="@dimen/_27sdp" />

            <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/select_a_voice"
                android:textColor="@color/gray_nine"
                android:textSize="@dimen/_20sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/voice_select_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--one-->
            <LinearLayout
                android:id="@+id/ll_alice_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@mipmap/alice_bg_two"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/female_one" />

                <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/alice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.3"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/flag_one" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/play_btn" />

            </LinearLayout>
            <!--two-->
            <LinearLayout
                android:id="@+id/ll_tiff_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@mipmap/signup_fb_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/female_two" />

                <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/tiffany"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.3"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/flag_two" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/play_btn" />

            </LinearLayout>
            <!--three-->
            <LinearLayout
                android:id="@+id/ll_kevin_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@mipmap/blue_curve_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/male_one" />

                <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/kevin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.3"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/flag_one" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/play_btn" />

            </LinearLayout>

            <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/when_is_the"
                android:textColor="@color/gray_nine"
                android:textSize="@dimen/_17sdp" />

            <!--time-->
            <!--  android:background="@mipmap/blue_curve_bg"-->
            <!-- android:backgroundTint="@color/white"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="1">

                <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center|left"

                    android:layout_weight="0.2"
                    android:background="@mipmap/time"
                    android:gravity="center|left"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="0.5"></LinearLayout>

                <ImageView
                    android:id="@+id/toggleButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="0.15"
                    android:background="@mipmap/toggle_btn" />

            </LinearLayout>

            <com.t.meditationapp.Custom_Widgets.CustomBoldtextView
                android:id="@+id/img_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@mipmap/next_btn" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>